extends layout

block content
    - var subtitle = 'ВХОД';
    - var title = 'МОЖНОWEB';
    header.header.d-flex.justify-content-between.align-items-center
        a.logo.d-flex.justify-content-between.align-items-center(href='/users' title='На главную')
            img.logo__image(src='../images/static/logo.png' alt='logo')
            h1.logo__title.m-0=title
        h2.subtitle.m-0=subtitle
    main.main.pt-5.row.justify-content-md-center
        form#sign-form.col.col-lg-3(method='dialog' enctype='multipart/form-data')
            .mb-2
                label(for='form-email') Email адрес
                input#form-email.form-control(type='email' name='email' placeholder='Введите email')
            button.btn.btn-primary(type='submit') Войти как администратор